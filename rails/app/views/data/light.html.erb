<script type="text/javascript">
function onoff(){
  $.ajax({url: "/luzes"}).done(function(data){console.debug(data)})
  currentvalue = document.getElementById('onoff1').value;
  document.getElementById('img').setAttribute("width",200);
  if(currentvalue=="On"){
    $('#onoff1').val("Off");
    document.getElementById('img').src ="ligada.png";
    document.getElementById('onoffmsg').innerHTML = "lampada agora esta ligada";
    }
  else {
    document.getElementById('onoff1').value ="On";
    document.getElementById('img').src ="desligada.jpg";
    document.getElementById('onoffmsg').innerHTML = "lampada agora esta desligada";
    }
  }
</script>

<body onload="onoff();">
<img src = "" id = "img"/><br>
<p  id ="onoffmsg"></p>
<input type="button" value="Off" id="onoff1" onclick="onoff();">
</body>


